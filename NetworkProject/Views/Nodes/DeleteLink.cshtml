@model NetworkProject.Models.Link

@{
    ViewBag.Title = "Delete Link";
}

<h2>Delete Link</h2>

<h3>Are you sure you want to delete this link?</h3>
<div>
    <h4>Link</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SourceNode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SourceNode.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TargetNode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TargetNode.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Level1")
        </div>
    }
</div>
